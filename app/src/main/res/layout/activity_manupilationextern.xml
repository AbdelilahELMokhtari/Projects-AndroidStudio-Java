<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manupilationextern">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/etSaisie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Votre Text" />

        <Button
            android:id="@+id/btnEcrire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ecrire Interne" />

        <Button
            android:id="@+id/btnLire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lire Interne" />

        <Button
            android:id="@+id/btnLireExterne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF9800"
            android:onClick="lireExterne"
            android:text="Lire Externe" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>