<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCategorie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sandwichs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectCategorie"
            android:padding="10dp"
            android:text="Sandwichs"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/pizzas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectCategorie"
            android:padding="10dp"
            android:text="Pizzas"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/salades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectCategorie"
            android:padding="10dp"
            android:text="Salades"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/desserts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectCategorie"
            android:padding="10dp"
            android:text="Desserts"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/boissons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectCategorie"
            android:padding="10dp"
            android:text="Boissons"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>